extends layouts/main-layout.pug

block styles
    link(rel="stylesheet" href="/css/shop.css")
    link(rel="icon" href="https://image.freepik.com/free-vector/online-shop-logo-template_59362-81.jpg" , type="image/jpg")
    link(rel="stylesheet", href="/css/single-product.css")

block mainContent
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product__item
                        header.card__header
                            h1.product__title #{product.title}
                        .card__image
                            img(src="https://cdn.pixabay.com/photo/2015/11/19/21/10/knowledge-1052010_960_720.jpg" alt="")
                        .card__content
                            h2.product__price $19.99
                            p.product__description A very interesting book for all curious readers
                        .card__actions
                        button.btn Add to Card 
        else
            h1 There is no products in your Shop