<%- include('../includes/head') %>
    <link rel="stylesheet" href="/css/product.css" ref="text/css" />
    </head>

    <body>
        <%- include('../includes/navigation') %>
            <main>
                <form class="product-form" action="/admin/add-product" method="POST">
                    <div class="form-control">
                        <label for="title"> Title </label>
                        <input type="text" name="title" id="" placeholder="Enter Product Name">
                    </div>
                    <div class="form-control">
                        <label for="imgUrl">Image Url : </label>
                        <input type="text" name="imgUrl" id="" placeholder="Enter Image URL">
                    </div>
                    <div class="from-control">
                        <label for="description">Product Description : </label>
                        <textarea name="description" id="" cols="30" rows="10" placeholder="Please Enter Your description here"></textarea>
                    </div>
                    <div class="form-control">
                        <label for="price">Price : </label>
                        <input type="text" name="price" id="" placeholder="Product Price">
                    </div>
                    <button type="submit">Add Product</button>
                </form>
            </main>
    <%- include('../includes/end') %>